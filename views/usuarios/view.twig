{% extends "layout/default/template.twig" %}
{% block title %} {{options.title}} {% endblock %}
{% block content %}
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">
                {{options.asunto}}
            </h5>
            <div class="card-body">
                {% include "partials/_messages.twig" %}
                <table class="table table-hover">
                    <tr>
                        <th>Id:</th>
                        <td>{{usuario.id}}</td>
                    </tr>
                    <tr>
                        <th>Nombre:</th>
                        <td>{{usuario.nombre}}</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>{{usuario.email}}</td>
                    </tr>
                    <tr>
                        <th>Rol:</th>
                        <td>{{usuario.role.nombre}}</td>
                    </tr>
                    <tr>
                        <th>Activo:</th>
                        <td>
                            {% if usuario.activo == 1 %}
                                Si
                            {% else %}
                                No
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Teléfonos:</th>
                        <td>
                            {% if telefonos is not empty %}
                                <div class="list-group">
                                    {% for telefono in telefonos %}
                                        <a href="{{BASE}}telefonos/view/{{telefono.id}}" class="list-group-item list-group-item-action" aria-current="true">
                                            {% include "partials/icon_telefono.twig" %}  {{telefono.numero}}
                                        </a>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-info">No hay teléfonos registrados</p>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Fecha creación:</th>
                        <td>{{usuario.created_at|date("d-m-Y H:i:s")}}</td>
                    </tr>
                    <tr>
                        <th>Fecha modificación:</th>
                        <td>{{usuario.updated_at|date("d-m-Y H:i:s")}}</td>
                    </tr>
                </table>
                <p>
                    <a href="{{BASE}}usuarios" class="btn btn-primary">Volver</a>
                    <a href="{{BASE}}telefonos/create/{{usuario.id}}/{{options.modelo}}" class="btn btn-success">Agregar Teléfono</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}